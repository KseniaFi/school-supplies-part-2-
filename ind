    <script>
        class FlipBook {
            constructor() {
                this.book = document.getElementById('book');
                this.pages = document.querySelectorAll('.page');
                this.prevBtn = document.getElementById('prevBtn');
                this.nextBtn = document.getElementById('nextBtn');
                this.audio = document.getElementById('bookAudio');
                this.currentPage = 0;
                this.totalPages = this.pages.length;

                this.init();
            }

            init() {
                this.prevBtn.addEventListener('click', () => this.prevPage());
                this.nextBtn.addEventListener('click', () => this.nextPage());

                // Добавляем обработчики для свайпов на мобильных устройствах
                this.setupTouchEvents();

                this.updateButtons();
            }

            nextPage() {
                if (this.currentPage < this.totalPages - 1) {
                    this.currentPage++;
                    this.updateBook();
                }
            }

            prevPage() {
                if (this.currentPage > 0) {
                    this.currentPage--;
                    this.updateBook();
                }
            }

            updateBook() {
                // Обновляем видимость страниц
                this.pages.forEach((page, index) => {
                    if (index === this.currentPage) {
                        page.classList.add('active');
                    } else {
                        page.classList.remove('active');
                    }
                });

                // Обновляем кнопки
                this.updateButtons();

                // Автовоспроизведение аудио на первой странице
                if (this.currentPage === 0 && this.audio.paused) {
                    this.audio.play().catch(e => console.log('Автовоспроизведение заблокировано'));
                }
            }

            updateButtons() {
                this.prevBtn.disabled = this.currentPage === 0;
                this.nextBtn.disabled = this.currentPage === this.totalPages - 1;
            }

            setupTouchEvents() {
                let startX = 0;
                let endX = 0;

                this.book.addEventListener('touchstart', (e) => {
                    startX = e.changedTouches[0].screenX;
                });

                this.book.addEventListener('touchend', (e) => {
                    endX = e.changedTouches[0].screenX;
                    this.handleSwipe(startX, endX);
                });
            }

            handleSwipe(startX, endX) {
                const swipeThreshold = 50;
                const diff = startX - endX;

                if (Math.abs(diff) > swipeThreshold) {
                    if (diff > 0) {
                        this.nextPage();
                    } else {
                        this.prevPage();
                    }
                }
            }
        }

        // Инициализация книги когда страница загружена
        document.addEventListener('DOMContentLoaded', () => {
            new FlipBook();
        });

        // Дополнительные функции для улучшения пользовательского опыта
        document.addEventListener('keydown', (e) => {
            const flipBook = new FlipBook(); // В реальном коде это должен быть singleton
            if (e.key === 'ArrowRight') {
                flipBook.nextPage();
            } else if (e.key === 'ArrowLeft') {
                flipBook.prevPage();
            }
        });
    </script>
</body>
